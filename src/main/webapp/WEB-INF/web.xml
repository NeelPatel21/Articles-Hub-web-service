<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet id="jsp">
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>logVerbosityLevel</param-name>
            <param-value>DEBUG</param-value>
        </init-param>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>keepgenerated</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>invalid url</servlet-name>
        <servlet-class>com.articles_hub.admin.InvalidUrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>com.articles_hub.admin.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleRemove</servlet-name>
        <servlet-class>com.articles_hub.admin.ArticleRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentRemove</servlet-name>
        <servlet-class>com.articles_hub.admin.CommentRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRemove</servlet-name>
        <servlet-class>com.articles_hub.admin.UserRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TagRemove</servlet-name>
        <servlet-class>com.articles_hub.admin.TagRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TagUpdate</servlet-name>
        <servlet-class>com.articles_hub.admin.TagUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUpdate</servlet-name>
        <servlet-class>com.articles_hub.admin.AdminUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogUpdate</servlet-name>
        <servlet-class>com.articles_hub.admin.LogUpdate</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <!--<url-pattern>/</url-pattern>-->
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.jspf</url-pattern>
        <url-pattern>*.jspx</url-pattern>
        <url-pattern>*.xsp</url-pattern>
        <url-pattern>*.JSP</url-pattern>
        <url-pattern>*.JSPF</url-pattern>
        <url-pattern>*.JSPX</url-pattern>
        <url-pattern>*.XSP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>invalid url</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.articles_hub</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/Authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleRemove</servlet-name>
        <url-pattern>/ArticleRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentRemove</servlet-name>
        <url-pattern>/CommentRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRemove</servlet-name>
        <url-pattern>/UserRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TagRemove</servlet-name>
        <url-pattern>/TagRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TagUpdate</servlet-name>
        <url-pattern>/TagUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUpdate</servlet-name>
        <url-pattern>/AdminUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogUpdate</servlet-name>
        <url-pattern>/LogUpdate</url-pattern>
    </servlet-mapping>
</web-app>
